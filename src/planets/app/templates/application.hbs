<h1>Planets</h1>
<div>
      <div className="flex">
        <div className="p-6 w-1/3">
          {{#if this.nextPage}}
            <Button
              disabled={{this.disabled}}
              loading={{this.loading}}
              {{on "click" this.fetchPlanets }}
            >
              Fetch More Planets
            </Button>
          {{/if}}
          <PlanetList />
        </div>
        <div className="w-2/3 p-6 border-l-2 border-white">
          <div className="selectedPlanet">
            <h2>Selected Planet</h2>
            <SelectedPlanet selectedId={{this.selected}} />
          </div>
        </div>
      </div>
    </div>
{{outlet}}
